        {
            "label": "Arduino Upload Current",
            "type": "shell",
            "command": "C:\\tools\\Anaconda3\\python.exe",
            "args": [
                "${workspaceFolder}\\compile.py",
                "${fileDirname}",
                "${fileBasename}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "(^[a-zA-Z]:\\\\[\\\\\\S|*\\S]?[^:]*).*$\\n\\n(^[^:]*):(\\d+):(\\d+): (error|warning): (.*$)",
                    "file": 1,
                    "line": 3,
                    "column": 4,
                    "severity": 5,
                    "message": 6
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
