{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "command": "cmd",
            "args": [
                "/C",
                "echo ${command:arduino.closeSerialMonitor}"
            ],
            "label": "Arduino close serial monitor",
            "problemMatcher": []
        },
        {
            "command": "cmd",
            "args": [
                "/C",
                "echo ${command:arduino.openSerialMonitor}"
            ],
            "label": "Arduino open serial monitor",
            "problemMatcher": []
        },
        {
            "label": "Arduino Upload Current",
            "type": "shell",
            "command": "C:\\tools\\Anaconda3\\python.exe",
            "args": [
                "${workspaceFolder}\\compile.py",
                "${workspaceFolder}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "(^[a-zA-Z]:\\\\[\\\\\\S|*\\S]?[^:]*).*$\\n\\n(^[^:]*):(\\d+):(\\d+): (error|warning): (.*$)",
                    "file": 1,
                    "line": 3,
                    "column": 4,
                    "severity": 5,
                    "message": 6
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
